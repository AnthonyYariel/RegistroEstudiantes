@page "{Id:int}"
@model RegistroEstudiantes.Pages.Estudiantes.DetalleEstudianteModel
@{
    ViewData["Title"] = "DetalleEstudiante";
}

<h3>@Model.Estudiante.Nombre @Model.Estudiante.Apellido</h3>
<br />

<div>
    <label style="font-weight:bold">Cédula:</label>
    @Model.Estudiante.Cedula
</div>
<br />
<div>
    <label style="font-weight:bold">Matrícula:</label>
    @Model.Estudiante.Matricula
</div>
<br />
<div>
    <label style="font-weight:bold">Fecha de Nacimiento:</label>
    @Model.Estudiante.FechaNacimiento
</div>
<br />
<div>
    <label style="font-weight:bold">Edad:</label>
    @Model.Estudiante.Edad
</div>
<br />
<div>
    <label style="font-weight:bold">Sexo:</label>
    @Model.Estudiante.Sexo
</div>
<br />
<div>
    <label style="font-weight:bold">Correo:</label>
    @Model.Estudiante.Correo
</div>
<br />
<div>
    <label style="font-weight:bold">Telefono:</label>
    @Model.Estudiante.Telefono
</div>
<br />
<div>
    <label style="font-weight:bold">Estatus:</label>
    @Model.Estudiante.Estatus
</div>
<br />
<a class="btn btn-primary" asp-page="./RegistroEstudiantes"> Volver al listado</a>

