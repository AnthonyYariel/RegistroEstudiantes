@page
@model RegistroEstudiantes.Pages.Estudiantes.RegistroEstudiantesModel
@{
    ViewData["Title"] = "RegistroEstudiantes";
}

<br />
<form method="get">
    <div class="input-group">
        <input type="text" class="form-control col-md-5" placeholder="Escriba el nombre del estudiante aquí..." asp-for="Texto" id="Texto">
        
        <div class="input-group-append" id="button-addon4">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Buscar</button>
            <button class="btn btn-outline-secondary" type="reset" id="button-addon2">Limpiar</button>
        </div>
    </div>

